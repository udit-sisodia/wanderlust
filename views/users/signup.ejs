<% layout("layouts/boilerplate")%>

 <div class="row">
    <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label mb-1" id="username">Username</label>
                <input type="text" name="username"  class="form-control mt-0" required>
                <div class="valid-feedback">Looks good</div>
            </div>
             <div class="mb-2">
                <label for="email" class="form-label mb-1" id="email">Email</label>
                <input type="email" name="email"  class="form-control mt-0" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label mb-1" id="password">Password</label>
                <input type="password" name="password"  class="form-control mt-0" required>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>