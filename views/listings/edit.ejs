<% layout("layouts/boilerplate")%>

<div class="row">
    <div class="col-7 offset-2">
    <h3 class="mt-3">Edit your Listing:</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
         <div class="mb-2">
            <label for="title" class="form-label mb-1" >Title</label>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control mt-0" required>
            <div class="valid-feedback">title looks good</div>
         </div>
        <div class="mb-2">
            <label for="description" class="form-label mb-1" >Description</label>
             <textarea type="text" name="listing[description]"  class="form-control mt-0" required><%=listing.description%></textarea>
             <div class="invalid-feedback">description should be valid</div>
        </div>
        Original Listing Image
        <div class="mb-2">
         <img src="<%=transformUrl%>" alt="nothing">
       </div>
       <div class="mb-2">
        <label for="image" class="form-label mb-1">Upload New Image Link</label>
        <input type="file" name="listing[image]"  class="form-control mt-0">
       </div>
        <div class="row">
            <div class="mb-2 col-md-4">
            <label for="price" class="form-label mb-1" >Price</label>
            <input  name="listing[price]" value="<%=listing.price%>" class="form-control mt-0" required>
             <div class="invalid-feedback">price should be valid</div>
        </div>
        <div class="mb-2 col-md-8">
             <label for="country" class="form-label mb-1" >Country</label>
             <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control mt-0" required>
              <div class="invalid-feedback">country should be valid</div>
        </div>
        </div>
        
        <div class="mb-2">
            <label for="location" class="form-label mb-1">Location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control mt-0" required>
             <div class="invalid-feedback">country should be valid</div>
        </div>
        
        <br>
        <button class="btn btn-dark edit-btn mt-1 mb-1">add</button>
    </form>
  </div>
        </div>
        
